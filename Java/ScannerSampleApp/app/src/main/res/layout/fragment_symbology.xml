<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- First Row: TextView + EditText (in horizontal layout) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- TextView -->
        <TextView
            android:id="@+id/apply_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Symbologies:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/package_spinner_value_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Button below the TextView and EditText -->
    <Button
        android:id="@+id/apply_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply" />

    <!-- First Row: TextView + EditText (in horizontal layout) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- TextView -->
        <TextView
            android:id="@+id/uninstall_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbology:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/package_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/package_spinner_value_specific"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <!-- Button below the TextView and EditText -->
    <Button
        android:id="@+id/apply_specific_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply" />

</LinearLayout>
